{
  "manifest_version": 2,
  "name": "More than 140",
  "description": "Allows you to view and send tweets over 140 characters",
  "version": "1.0",
  "icons": {
    "256": "icon.png"
  },
  "content_scripts": [
   {
     "matches": [
       "http://twitter.com/*",
       "https://twitter.com/*"
     ],
     "css": ["styles.css"],
     "js": ["dist/script.js"]
   }
 ]
}
